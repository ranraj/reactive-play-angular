# Routes
# This file defines all application routes (Higher priority routes first)
#
# Note: @controllers syntax signifies the actual controller instance, retrieved via GlobalSettings.getController().
# ~~~~

# Single endpoint for serving AngularJS
GET     /                           @controllers.Application.index
GET     /randomUUID                 @controllers.Application.randomUUID

# User management API
GET     /rest/users                      @controllers.Users.findUsers
POST    /rest/user                       @controllers.Users.createUser
PUT     /rest/user/:firstName/:lastName  @controllers.Users.updateUser(firstName: String, lastName: String)

# Plan management API
GET     /rest/plans                      @controllers.Plans.findPlans
POST    /rest/plan                       @controllers.Plans.createPlan
PUT     /rest/plan/:content/:store  @controllers.Plans.updatePlan(content: String, store: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
